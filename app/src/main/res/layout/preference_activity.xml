<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/digits"
            android:textColor="@android:color/black" />

    <RadioGroup
            android:id="@+id/digits"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp" >

        <RadioButton
                android:id="@+id/digitOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/one"
                android:checked="true"/>

        <RadioButton
                android:id="@+id/digitTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/two" />

        <RadioButton
                android:id="@+id/digitThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/three" />

        <RadioButton
                android:id="@+id/digitFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/four" />

    </RadioGroup>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/operations"
            android:textColor="@android:color/black" />

    <RadioGroup
            android:id="@+id/operations"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp" >

        <RadioButton
                android:id="@+id/operationTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/two" />

        <RadioButton
                android:id="@+id/operationThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/three" />

        <RadioButton
                android:id="@+id/operationFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/four" />

        <RadioButton
                android:id="@+id/operationFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/five" />

        <RadioButton
                android:id="@+id/operationTen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ten" />
    </RadioGroup>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="@string/delay"
                android:textColor="@android:color/black" />

        <TextView
                android:id="@+id/delayDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>

    <SeekBar
            android:id="@+id/delay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:progress="8"
            android:max="10" />

    <Button
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/start" />
</LinearLayout>